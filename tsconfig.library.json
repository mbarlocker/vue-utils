{
	"extends": [
		"./tsconfig.base.json",
	],
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"outDir": "dist",
		"baseUrl": ".",
		"lib": [
			"ESNext",
			"DOM",
		],
		"strict": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
	],
	"exclude": [
		"src/**/__tests__/*",
		"src/**/*.vue",
	],
}
