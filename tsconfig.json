{
	"extends": [
		"@vue/tsconfig/tsconfig.lib.json",
	],
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"emitDeclarationOnly": false,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		"baseUrl": ".",
		"lib": [
			"ESNext",
			"DOM",
		],
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
	],
	"exclude": [
		"src/**/__tests__/*",
	],
}
