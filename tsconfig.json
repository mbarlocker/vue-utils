{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "dist",
    "outDir": "dist",
		"baseUrl": ".",
		"lib": [
			"ESNext",
			"DOM",
		],
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue",
	],
	"exclude": [
		"src/**/__tests__/*",
	],
}
